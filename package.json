{
  "name": "@nealrame/ts-injector",
  "version": "0.5.0",
  "description": "A simple Dependency Injection library for Typescript",
  "main": "./dist/index.js",
  "files": [
    "dist/**/*",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "./scripts/build.sh",
    "clean": "./scripts/clean.sh",
    "test": "./scripts/test-spec.sh",
    "test-app": "./scripts/test-app.sh",
    "test-spec": "./scripts/test-spec.sh",
    "watch-app": "npm-watch test-app",
    "watch-spec": "npm-watch test-spec"
  },
  "watch": {
    "test-app": {
      "patterns": [
        "src/lib/**/*",
        "src/tests/app/**/*"
      ],
      "extensions": "ts",
      "ignore": "src/**/*.spec.ts",
      "quiet": true
    },
    "test-spec": {
      "patterns": [
        "src/lib/**/*",
        "src/tests/spec/**/*"
      ],
      "extensions": "ts",
      "quiet": true
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NealRame/ts-injector.git"
  },
  "keywords": [
    "dependency",
    "injection",
    "typescript"
  ],
  "author": "Julien Graziano <julien@graziano.fr>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/NealRame/ts-injector/issues"
  },
  "homepage": "https://github.com/NealRame/ts-injector#readme",
  "devDependencies": {
    "@types/chai": "^4.3.3",
    "@types/mocha": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "chai": "^4.3.6",
    "eslint": "^8.25.0",
    "mocha": "^10.1.0",
    "npm-watch": "^0.11.0",
    "ts-node": "^10.9.1",
    "tslib": "^1.14.1",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.13"
  }
}
