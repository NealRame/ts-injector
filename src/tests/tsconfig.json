{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "allowJs": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "out",
    "baseUrl": ".",
    "types": [
      "chai",
      "mocha"
    ],
    "paths": {},
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "**/*.spec.ts",
    "../lib/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
